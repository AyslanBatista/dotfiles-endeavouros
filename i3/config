# ================================
# i3 Window Manager Configuration
# ================================
# Based on EndeavourOS i3wm setup
# Maintainer: joekamprad [joekamprad //a_t// endeavouros.com]

# =============
# BASIC SETTINGS
# =============

# Font for window titles and bar
font pango: Noto Sans Regular 10

# Modifier key (Windows key)
set $mod Mod4

# Default workspace layout
workspace_layout default

# Borders and gaps
new_window pixel 1
gaps inner 4
gaps outer 2

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# =============
# WORKSPACE VARIABLES
# =============
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# =============
# NAVIGATION AND MOVEMENT
# =============

# Change focus between windows
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+b focus up
bindsym $mod+o focus right

# Use arrows as well
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+b move up
bindsym $mod+Shift+o move right

# Use arrows as well
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# =============
# WORKSPACE CONTROL
# =============

# Switch between workspaces
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Go to specific workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# Move container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# Create new empty workspace
bindsym $mod+Shift+n exec --no-startup-id ~/.config/i3/scripts/empty_workspace

# =============
# LAYOUT AND WINDOWS
# =============

# Split horizontal/vertical
bindsym $mod+h split h
bindsym $mod+v split v

# Fullscreen
bindsym $mod+f fullscreen toggle

# Toggle layouts
bindsym $mod+g layout stacking
bindsym $mod+s layout toggle split

# Toggle tiling/floating
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle

# Focus parent container
bindsym $mod+a focus parent

# Close window
bindsym $mod+q kill

# =============
# RESIZE WINDOWS
# =============
bindsym $mod+Ctrl+Right resize shrink width 1 px or 1 ppt
bindsym $mod+Ctrl+Down resize grow height 1 px or 1 ppt
bindsym $mod+Ctrl+Up resize shrink height 1 px or 1 ppt
bindsym $mod+Ctrl+Left resize grow width 1 px or 1 ppt

# =============
# APPLICATIONS AND SHORTCUTS
# =============

# Terminals
bindsym $mod+Return exec kitty
bindsym $mod+shift+Return exec --no-startup-id xfce4-terminal

# Main applications
bindsym $mod+e exec /usr/bin/subl
bindsym $mod+w exec --no-startup-id /usr/bin/brave
bindsym $mod+n exec --no-startup-id /usr/bin/thunar

# Screenshots
bindsym Print exec --no-startup-id scrot ~/%Y-%m-%d-%T-screenshot.png && notify-send "Screenshot saved to ~/$(date +"%Y-%m-%d-%T")-screenshot.png"
bindsym Shift+Print exec flameshot gui

# Applications with function keys
bindsym $mod+F2 exec /usr/bin/discord
bindsym $mod+F3 exec /usr/bin/Telegram
bindsym $mod+F4 exec ~/.config/i3/Scripts/rofi-search
bindsym $mod+F5 exec ~/.config/i3/Scripts/Rofi-Playlist-Audacious
bindsym $mod+F8 exec /usr/bin/obs
bindsym $mod+F9 exec /usr/bin/zoom
bindsym $mod+F10 exec /usr/bin/vmware
bindsym $mod+F12 exec --no-startup-id ~/.config/i3/scripts/powermenu

# =============
# ROFI MENUS
# =============

# Application menu
bindsym $mod+d exec --no-startup-id rofi -modi drun -show drun -config ~/.config/rofi/rofidmenu.rasi

# Emoji menu
bindsym $mod+r exec rofi -show emoji -modi emoji

# Window menu
bindsym $mod+t exec --no-startup-id rofi -show window -config ~/.config/rofi/rofidmenu.rasi

# =============
# SYSTEM CONTROLS
# =============

# Lock screen
bindsym $mod+l exec --no-startup-id ~/.config/i3/Scripts/lock-kiosk.sh

# System controls
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Power profiles
bindsym $mod+Shift+p exec --no-startup-id ~/.config/i3/scripts/power-profiles

# Help shortcuts
bindsym F1 exec --no-startup-id ~/.config/i3/scripts/keyhint-2

# =============
# MEDIA CONTROLS
# =============

# Volume
bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_down
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh volume_mute

# Gradual volume
bindsym $mod+XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 1%+ && pkill -RTMIN+1 i3blocks
bindsym $mod+XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 1%- && pkill -RTMIN+1 i3blocks

# Microphone
bindsym XF86AudioMicMute exec amixer sset Capture toggle

# Playback controls
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause 
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Toggle audio devices
bindsym $mod+p exec --no-startup-id ~/.config/i3/scripts/audio-device-switch

# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/scripts/volume_brightness.sh brightness_down

# =============
# FLOATING WINDOW RULES
# =============
for_window [class="Yad" instance="yad"] floating enable
for_window [class="Galculator" instance="galculator"] floating enable
for_window [class="Qalculate" instance="qalculate-gtk"] floating enable
for_window [class="Blueberry.py" instance="blueberry.py"] floating enable
for_window [class="Xsane" instance="xsane"] floating enable
for_window [class="Pavucontrol" instance="pavucontrol"] floating enable
for_window [class="qt5ct" instance="qt5ct"] floating enable
for_window [class="Bluetooth-sendto" instance="bluetooth-sendto"] floating enable
for_window [class="Pamac-manager"] floating enable
for_window [window_role="About"] floating enable

# Specific borders
for_window [class="urxvt"] border pixel 1
for_window [class="(?i)^code$"] border pixel 1
for_window [class=".*"] border pixel 1
hide_edge_borders none

# =============
# COLOR SCHEME
# =============

# Color definitions
set $darkbluetrans  #08052be6
set $darkblue       #08052b
set $lightblue      #5294e2
set $urgentred      #e53935
set $white          #ffffff
set $black          #000000
set $purple         #e345ff
set $darkgrey       #383c4a
set $grey           #b0b5bd
set $mediumgrey     #8b8b8b
set $yellowbrown    #e1b700

set $bg_normal      #000711
set $bg_focus       #22222R
set $bg_urgent      #ff0000
set $fg_normal      #02d2f7
set $fg_focus       #2777ff
set $fg_urgent      #ffffff
set $border_normal  #000000
set $border_focus   #02d2f7

# Window colors
# define colors for windows:
client.focused		    $border_focus	$darkblue	$white		$border_focus		$border_focus
client.unfocused	    $darkblue	$darkblue	$grey		$border_normal	$border_normal
client.focused_inactive	$darkblue	$darkblue	$grey		$border_normal	$black
client.urgent		    $urgentred	$urgentred	$white		$border_focus	$yellowbrown

# =============
# STATUS BAR
# =============
bar {
    font pango: Noto Sans Regular 10
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    position top
    tray_output primary
    tray_padding 0
    strip_workspace_numbers yes

    colors {
        separator          $purple
        background         $bg_normal
        statusline         $white
        #                  border          bg              txt
        focused_workspace  $border_focus   $fg_focus       $white
        active_workspace   $lightblue      $darkbluetrans  $grey
        inactive_workspace $darkgrey       $darkgrey       $grey
        urgent_workspace   $urgentred      $urgentred      $white
    }
}

# =============
# COMPOSITOR
# =============
exec_always --no-startup-id picom --config ~/.config/picom.conf

# =============
# AUTOSTART
# =============

# Polkit authentication
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Desktop applications
exec --no-startup-id dex --autostart --environment i3

# Monitor configuration
exec --no-startup-id ~/.screenlayout/monitor.sh

# Wallpaper
exec --no-startup-id nitrogen --restore

# Power settings
exec --no-startup-id xset s off
exec --no-startup-id xset -dpms

# Notifications
exec --no-startup-id /usr/bin/dunst
